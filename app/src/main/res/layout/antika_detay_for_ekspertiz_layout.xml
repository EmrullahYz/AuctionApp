<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >

    <RelativeLayout

        android:id="@+id/relLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/relLayoutTopBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="Antika Detaylari"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/relLayoutBottomBar"
            android:layout_below="@id/relLayoutTopBar"
            android:layout_alignParentStart="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp">


                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/antikaDetayImage11"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_marginLeft="210dp"
                                android:onClick="OnClickAdd"
                                android:src="@drawable/ic_add_circle_outline" />

                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:id="@+id/antikaDetayImage22"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:onClick="OnClickAdd"
                                android:src="@drawable/ic_add_circle_outline" />

                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:id="@+id/antikaDetayImage33"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:onClick="OnClickAdd"
                                android:src="@drawable/ic_add_circle_outline" />


                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Baslik :"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/antikaDetayEksBaslik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="merhaba"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:text="Aciklama :"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView

                        android:id="@+id/antikaDetayEksAciklama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ACIKLAMA"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Fiyat :"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/antikaDetayEksFiyat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="En yuksek Teklif"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Sahip Mail :"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/antikaEksSahipMail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sahipMail"
                        android:textSize="15sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Sahip Tel :"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/antikaEksSahipTel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SahipTel"
                        android:textSize="15sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:focusable="false"
                    android:focusableInTouchMode="true">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Görüş :"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/antikaEksGorusu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Antika hakkında Görüş giriniz."
                        android:textSize="15sp"
                        android:inputType="text"/>

                </LinearLayout>


                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:focusable="false"
                    android:focusableInTouchMode="true">

                    <Button
                        android:id="@+id/antikaEkspertizOnaylaBtn"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_corner_button3"
                        android:text="Onayla"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/antikaEkspertizSilBtn"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_corner_button2"
                        android:text="Kaldır"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/relLayoutBottomBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorBackground">

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottomNav3Menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:background="@color/colorPrimary"
                app:itemTextColor="@color/colorWhite"
                app:menu="@menu/ekspertiz_navigation_menu">


            </android.support.design.widget.BottomNavigationView>


        </RelativeLayout>
    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>